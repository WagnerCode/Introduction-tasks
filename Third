public static void Main(string[] args)
        {
            while (true)
            {
                Console.Clear();
                Console.WriteLine(@"1. New game 
2. About the author 
3. Quit");
                string action = Console.ReadLine();

                if (action == "1")
                {
                    Console.WriteLine("New game");
                    Console.ReadKey();
                    continue;
                }

                if (action == "2")
                {
                    Console.WriteLine("He is a rising star!");
                    Console.ReadKey();
                    continue;
                }

                if (action == "3")
                {
                    Console.WriteLine("Are you sure? [y/n]");
                    string sure = Console.ReadLine();
                    switch (sure)
                    {
                        case ("y"):
                            
                        case ("n"): 
                            continue;
                    }
                }
