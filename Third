            Console.WriteLine("Give your first name: ");
            string fn = Console.ReadLine();
            Console.WriteLine("Give your last name: ");
            string ln = Console.ReadLine();
            Console.WriteLine("Your street: ");
            string str = Console.ReadLine();
            Console.WriteLine("Your house number: ");
            string house = Console.ReadLine();
            Console.WriteLine("Your flat number: ");
            string flat = Console.ReadLine();
            Console.WriteLine("Zip code: ");
            string zip = Console.ReadLine();
            Console.WriteLine("Your city: ");
            string city = Console.ReadLine();

            string first = ($"First name {fn} Last name {ln}");
            string second = ($"St. {str} {house}/{flat}");
            string third = ($"Zip-code {zip} City {city}");
            Console.WriteLine(first);
            Console.WriteLine(second);
            Console.WriteLine(third);
